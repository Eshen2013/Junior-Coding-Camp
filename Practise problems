Problem 1

length = float(input("Enter the length of the rectangle: "))
width = float(input("Enter the width of the rectangle: "))
height = float(input("Enter the height of the rectangle: "))

# Calculate the volume using the provided dimensions
volume = length * width * height

# Display the calculated volume
print("The volume of the rectangle is:", volume)


Problem 2

principal = float(input("Enter the principal amount: "))
rate = float(input("Enter the rate of interest (in percentage): "))
time = float(input("Enter the time period (in years): "))

# Calculate the simple interest
simple_interest = (principal * rate * time) / 100
print("The simple interest is:", simple_interest)

Problem 3
pokemon_name = input("Enter pokemon name:")
pokemon_speed = 10
print("Attacks - Quick attack , agility , volt tackle")
user_input = input("Choose attack: ") 

if(user_input == 'Quick attack'):
    pokemon_speed = pokemon_speed + 5
    print(pokemon_speed)

if(user_input == 'agility'):
    pokemon_speed = pokemon_speed + 10
    print(pokemon_speed)
    
if(user_input == 'volt tackle'):
    pokemon_speed = pokemon_speed + 20
    print(pokemon_speed)
    
print("Code completed.....")

#Practise Problems
def addition():
    a = int(input("Enter first number:"))
    b= int(input("Enter second number:"))
    add = a+b
    print("Addition is:", add)
    
def subtraction():
    a = int(input("Enter first number:"))
    b= int(input("Enter second number:"))
    subtract = a-b
    print("Subtraction is:", subtract)
    
def multiplication():
    a = int(input("Enter first number:"))
    b= int(input("Enter second number:"))
    multiply = a * b
    print("Multiplication is:", multiply)
    
addition()
subtraction()
multiplication()


def calculate_area(length,breadth):
    area = length*breadth
    print("Area is:",area)
    
def calculate_volume(length,breadth,height):
    volume = length*breadth*height
    print("Volume is:",volume)
    
calculate_area(5,4)
calculate_volume(5,4,3)


length = 5
breadth = 4
volume = 3
area = length*breadth 
print("The area is:",area)
print("The volume is:",volume)
